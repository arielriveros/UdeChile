<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>CommentsServlet</servlet-name>
        <servlet-class>cc5002.controller.CommentsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CommentsServlet</servlet-name>
        <url-pattern>/comments</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AjaxHandler</servlet-name>
        <servlet-class>cc5002.controller.AjaxHandler</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AjaxHandler</servlet-name>
        <url-pattern>/AjaxHandler</url-pattern>
    </servlet-mapping>
</web-app>